<mvc:View
	controllerName="sap.ui.demo.nav.controller.employee.EmployeeList"
	xmlns="sap.m"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form">
	<Page id="employeeListPage" 
		showNavButton="false"
		class="sapUiResponsiveContentPadding">

		<content>
			<IconTabBar
				id="idIconTabBarNoIcons"
				expanded="true"
				expandable="false"
				class="sapUiResponsiveContentPadding" select="handleTabSelection">
				<items>
					<IconTabFilter
						text="Students" key='stud'>
						<content>
							
						<SplitApp id="SplitAppDemo" initialDetail="detail" initialMaster="master2" class="splitter">
							<detailPages>
								
								<Page id="detail" class="sapUiStdPage" showHeader="false"  >
									<content>
										<Panel width="auto" class="sapUiResponsiveMargin">
										<headerToolbar>
										<Toolbar height="3rem">
										<Title text="Student Details"/>
										</Toolbar>
										</headerToolbar>
										<content>
									
														<l:Grid
															defaultSpan="L12 M12 S12"
															width="auto">
															<l:content>
																<f:SimpleForm id="SimpleFormDisplay"
																	minWidth="1024"
																	maxContainerCols="2"
																	editable="false"
																	layout="ResponsiveGridLayout"
																	labelSpanL="3"
																	labelSpanM="3"
																	emptySpanL="4"
																	emptySpanM="4"
																	columnsL="1"
																	columnsM="1">
																	<f:content>
																		<Label text="User Name" />
																		<Text id="username" />
																		<Label text="Enrolled Date" />
																		<Text id="enDate" />
																		<Label text="Aadhar" />
																		<Text id="aadhar" />
																		<Label text="Address" />
																		<Text id="address" />
																		<Label text="Phone Number" />
																		<Text id="phn" />																		
																		<Label text="E-mail" />
																		<Text id="email" />
																	</f:content>
																</f:SimpleForm>
															</l:content>
														</l:Grid>
											
										</content>
										</Panel>
										<Panel width="auto" class="sapUiResponsiveMargin">
										<headerToolbar>
										<Toolbar height="3rem">
										<Title text="Course Details"/>
										</Toolbar>
										</headerToolbar>
										<content>
										
														<l:Grid
															defaultSpan="L12 M12 S12"
															width="auto">
															<l:content>
																<f:SimpleForm id="SimpleFormDisplay2"
																	minWidth="1024"
																	maxContainerCols="2"
																	editable="false"
																	layout="ResponsiveGridLayout"
																	labelSpanL="3"
																	labelSpanM="3"
																	emptySpanL="4"
																	emptySpanM="4"
																	columnsL="1"
																	columnsM="1">
																	<f:content>
																		<Label text="Level" />
																		<Text id="level" />
																		<Label text="Quiz Taken" />
																		<Text id="quiz" />
																		<Label text="Hours Completed" />
																		<Text id="hours" />
																		<Label text="Progress" />
																		
																	</f:content>
																</f:SimpleForm>
															</l:content>
														</l:Grid>
											<ProgressIndicator class="sapUiSmallMarginBottom" 
											showValue="true"
											state="None"  id="ProgressBar"/>
										</content>
										</Panel>
									</content>
										
								</Page>
							</detailPages>
							<masterPages>
								<Page id="master2" icon="sap-icon://action" class="sapUiStdPage" showHeader="false">
									<content>
										<List select="onListItemPress" id="studList" mode="SingleSelectMaster">
											<items></items>
										</List>
									</content>
								</Page>
							</masterPages>
						</SplitApp>
						</content>
					</IconTabFilter>
					<IconTabFilter
						text="Reports" key='repo'>
						<html:div id="circleStudentsCompleted" class="c100 big green">
						  <html:span id="textStudentsCompleted">InProgress</html:span>
						  <html:div class="slice">
						    <html:div class="bar"></html:div>
						    <html:div class="fill"></html:div>
						  </html:div>
						</html:div>					
					</IconTabFilter>
				</items>
			</IconTabBar>			
		</content>
	</Page>
</mvc:View>
